{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=photography_db;Username=postgres;Password=your_password"
  },
  
  "FrontendUrl": "http://localhost:5173",
  
  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForHS256Algorithm!",
    "Issuer": "Photography.API",
    "Audience": "Photography.Client",
    "ExpiresInDays": 7
  },
  
  "Storage": {
    "Provider": "AzureBlob",
    "AzureBlob": {
      "ConnectionString": "your_azure_connection_string",
      "ContainerName": "photos"
    }
  },
  
  "Upload": {
    "MaxFileSizeInMB": 10,
    "MaxFilesPerRequest": 50,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
  }
}